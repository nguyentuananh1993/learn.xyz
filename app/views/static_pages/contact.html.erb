

	<!-- Main -->
		<section id="main" class="container 75%">
			<header>
				<h2>Contact Us</h2>
				<p>Tell us what you think about our little operation.</p>
			</header>
			<div class="box">
				<form method="get" action="">
					<div class="row uniform 50%">
						<div class="6u 12u(mobilep)">
							<input type="text"  id="name" value="" placeholder="Name" />
						</div>
						<div class="6u 12u(mobilep)">
							<input type="email" id="email" value="" placeholder="Email" />
						</div>
					</div>
					<div class="row uniform 50%">
						<div class="12u">
							<input type="text"  id="subject" value="" placeholder="Subject" />
						</div>
					</div>
					<div class="row uniform 50%">
						<div class="12u">
							<textarea  id="message" placeholder="Enter your message" rows="6"></textarea>
						</div>
					</div>
					<div class="row uniform">
						<div class="12u">
							<ul class="actions align-center">
								<li><input type="submit" value="Send Message" /></li>
							</ul>
						</div>
					</div>
				</form>
			</div>
		</section>