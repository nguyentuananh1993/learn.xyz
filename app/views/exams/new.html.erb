<%= render "layouts/header" %>
<% provide :title, "New Exam" %>
<section id="main" class="container">
  <header>
    <h2>New Exams</h2>
  </header>
  <div class="box">
    <%= form_for @exam do |f| %>
      <div class="row uniform 60%"> 
        <div class="8u 12u(mobilep)">
          <%= f.select :category_id, options_from_collection_for_select(@categories, :id, :name), {}, {class: "form-control"} %>
        </div>
      </div>
      <div class="row uniform 60%"> 
        <div class="8u 12u(mobilep)">
          <%= f.submit "Submit", class: "btn btn-primary btn-fix" %>
        </div>
      </div>
    <% end %>
  </div>
  
  <div class="box">
    <h1><%= t ".search" %></h1>
    <%= render "search_form" %>
  </div>
  <div class="box">
    <h1><%= "All Exams" %></h1>
    <div class="row">
      <div class="12u">
        <div class="table-wrapper">
          <table>
            <thead>
              <tr>
                <th>No.</th>
                <th>Title</th>
                <th>Score</th>
                <th>Date/Time</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <%= render @exams %>
            </tbody>
          </table>
        </div>
    </div>
  </div>
  </div>
</section>
